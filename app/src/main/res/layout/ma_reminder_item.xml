<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ri_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_list_height_72"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/border_set"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ri_elements"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/ri_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin" />

        <TextView
            android:id="@+id/ri_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height_32"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ri_status"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/ri_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ri_title"
            android:layout_below="@id/ri_title"
            android:text="@string/ar_dateView" />


        <TextView
            android:id="@+id/ri_priority"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height_48"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ri_title"
            android:padding="@dimen/icon_margin"
            android:text="@string/ar_priorityLow"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ri_delete"
        android:layout_width="@dimen/icon_layout"
        android:layout_height="@dimen/icon_layout"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/icon_margin"
        android:src="@drawable/ic_delete_black_36dp" />

    <ImageView
        android:id="@+id/ri_edit"
        android:layout_width="@dimen/icon_layout"
        android:layout_height="@dimen/icon_layout"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ri_delete"
        android:padding="@dimen/icon_margin"
        android:src="@drawable/ic_mode_edit_black_36dp" />

    <ImageView
        android:id="@+id/ri_playaudio"
        android:layout_width="@dimen/icon_layout"
        android:layout_height="@dimen/icon_layout"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ri_edit"
        android:padding="@dimen/icon_margin"
        android:src="@drawable/ic_play_arrow_black_36dp" />

    <ImageView
        android:id="@+id/ri_stopaudio"
        android:layout_width="@dimen/icon_layout"
        android:layout_height="@dimen/icon_layout"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ri_edit"
        android:padding="@dimen/icon_margin"
        android:src="@drawable/ic_stop_black_24dp" />


</RelativeLayout>